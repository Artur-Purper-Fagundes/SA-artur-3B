<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EE0606"
    tools:context=".Jogos">

    <ImageView
        android:id="@+id/callon"
        android:layout_width="379dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/editCall2"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:text="Escolha seus Jogos"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:background="@drawable/Mine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/button2"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/Sea"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:background="@drawable/Lol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:background="@drawable/Vava"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:layout_editor_absoluteX="236dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:background="@drawable/Cs"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="504dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="144dp"
        android:layout_height="122dp"
        android:background="@drawable/Rockt"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="504dp" />

</androidx.constraintlayout.widget.ConstraintLayout>